<project name="java tasks" default="run">
	<target name="compile" description="compile the java files">
		<mkdir dir="build/classes"/>
		<javac srcdir="src" destdir="build/classes"/>
	</target>
	<target name="package" depends="compile" description="packaing the the files">
		<mkdir dir="build/jars"/>
		<jar destfile="build/jars/CallingMethodsInSameClass.jar" basedir="build/classes">
			<manifest>
				<attribute name="Main-Class" value="CallingMethodsInSameClass"/>
			</manifest>
		</jar>
	</target>
	<target name="run" depends="package" description="run the packsge">
		<java jar="build/jars/CallingMethodsInSameClass.jar" fork="true"/>
	</target>
</project>
